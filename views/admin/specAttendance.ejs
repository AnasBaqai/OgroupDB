<%- include("../partials/header") -%>

  <div class="details">

    <h1>
    <%= student.name %>
    </h1>
    <h3 class="text-muted">
      ID: <%= student.id%>
    </h3>
    <h3 class="text-muted">
      ADDRESS: <%= student.address %>
    </h3>
    <h3 class="text-muted">
      PHONE NUMBER: <%= student.phoneNumber %>
    </h3>
    <h3 class="text-muted">
      CLASS: <%= student.class %>
    </h3>
    <h3 class="text-muted">
      Email: <%= student.email %>
    </h3>


  </div>
  <div class="details table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date </th>
          <th scope="col">Status</th>
         

        </tr>
      </thead>
      <tbody>
        <% student.attendance.forEach(function(subject){ %>
          <tr>
            <th scope="row">
              <%= subject.pDate %>
            </th>
            <td>
              <%= subject.isPresent %>
            </td>
            
            <!-- <td>
    
              <form action="/delete" method="post">
                <button  name="subjectID" value="<%=subject._id%>" class="btn btn-dark btn-md delete" role="button" onclick="return confirm('Are you sure you want to delete this item?');"
                  id="print"><i class="fa-solid fa-delete-left"></i></button>
                <input type="hidden" name="studentID" value="<%=student._id%>">
              </form>
            </td>
             -->
          </tr>

          <% }) %>

      </tbody>
    </table>
  </div>

  <button id="print" onclick="window.print()" class="btn btn-lg btn-dark my-5">PRINT <i
      class="fa-solid fa-print fa-lg"></i></button>

  <%- include("../partials/footer") -%>